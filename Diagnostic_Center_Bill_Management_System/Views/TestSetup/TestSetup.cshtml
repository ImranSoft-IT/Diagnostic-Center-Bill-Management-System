@model Diagnostic_Center_Bill_Management_System.ViewModel.TestSetupViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header  d-flex flex-row align-items-center justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Test Setup</h5>
    </div>

    <div class="card-body p-3 m-0" style="padding-bottom:0px;">
        <div class="container">
            <form asp-action="TestSetup" id="FormId" method="post">

                <div class="row">
                    <input type="hidden" id="Id" name="Id" value="0" />
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="TestName" class="col-sm-4 col-form-label">Test Name: <span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="TestName" name="TestName" required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="TestFee" class="col-sm-4 col-form-label">Test Fee</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="TestFee" name="TestFee" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="TestTypeSetupId" class="col-sm-4 col-form-label">Test Type Name</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="TestTypeSetupId" name="TestTypeSetupId">
                                    <option value="">Select</option>
                                    @foreach (var data in Model.testTypes)
                                    {
                                        <option value="@data.Id">@data.TestType_Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">

                    <div class="col-md-4"></div>
                    <div class="col-md-2">
                        <button type="submit" id="submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;">Save</button>
                    </div>
                    <div class="col-md-6"></div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Test List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="TestTable">
                    <thead>
                        <tr>
                            <td>SL</td>
                            <th>Test Name</th>
                            <th>Test Fee</th>
                            <th>Test Type</th>
                            <th>Action</th>
                    </thead>
                    @{int i = 1;
                        <tbody>

                            @foreach (var data in Model.testSetups)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data.TestName</td>
                                    <td>@data.TestFee</td>
                                    <td>@data.TestTypeSetup?.TestType_Name</td>

                                    <td>
                                            <a class="btn btn-success" title="Edit/Update" onclick="Edit(@data.Id, '@data.TestName', '@data.TestFee', '@data.TestTypeSetupId')" href="javascript:void(0)">Edit</a>&nbsp;&nbsp;
                                            @*<a class="btn btn-danger" title="Delete" href="javascript:void(0)" onclick="DeleteMaster(@data.Id)"><i class="fa fa-trash-alt"></i></a>*@
                                    </td>
                                </tr>

                                i++;

                            }

                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        


    function Edit(id, TestName, TestFee, TestTypeSetupId) {
        $("#Id").val(id);
        $("#TestName").val(TestName);
        $("#TestFee").val(TestFee);
        $("#TestTypeSetupId").val(TestTypeSetupId);
           
    }

           


       
</script>