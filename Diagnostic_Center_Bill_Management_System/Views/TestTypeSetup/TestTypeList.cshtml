@model Diagnostic_Center_Bill_Management_System.ViewModel.TestTypeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header  d-flex flex-row align-items-center justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Test Type Setup</h5>

    </div>
   
    <div class="card-body p-3 m-0" style="padding-bottom:0px;">
        <div class="container">
            @Html.ValidationMessage("TestType")
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form asp-action="TestTypeList" id="FormId" method="post">

                <div class="row">
                    <input type="hidden" id="Id" name="Id" value="0" />
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="TestType_Name" class="col-sm-4 col-form-label">Test Type Name: <span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="TestType_Name" name="TestType_Name" required />
                            </div>
                        </div>
                        @*<div class="form-group row">
                            <label for="Slno" class="col-sm-4 col-form-label">Slno</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Slno" name="Slno" />
                            </div>
                        </div>*@


                    </div>
                </div>

                <div class="row">

                    <div class="col-md-4"></div>
                    <div class="col-md-2">
                        <button type="submit" id="submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;">Save</button>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Test Type List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="projectTable">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Name</th>
                            @*<th>Action</th>*@
                    </thead>
                    @{int i = 1;
                        <tbody>

                            @foreach (var data in Model.testTypes)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data.TestType_Name</td>

                                    @*<td>
                                            <a class="btn btn-success" title="Edit/Update" onclick="EditProject(@data.Id,'@data.projectName','@data.projectShortName','@data.projectLocation','@data.inChargeEmpCode','','','@data.projectStatus','@data.specialBranchUnitId','@data.isdefault','@data.startDate?.ToString("dd-MMM-yyyy")','@data.endDate?.ToString("dd-MMM-yyyy")')" href="javascript:void(0)"><i class='fa fa-edit'></i></a>&nbsp;&nbsp;
                                            <a class="btn btn-danger" title="Delete" href="javascript:void(0)" onclick="DeleteMaster(@data.Id)"><i class="fa fa-trash-alt"></i></a>
                                        </td>*@
                                </tr>

                                i++;

                            }

                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>